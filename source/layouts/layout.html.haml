%html.no-js
  %head
    %meta{charset: 'utf-8'}
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{content: 'ie=edge,chrome=1', 'http-equiv': 'x-ua-compatible'}
    %title= page_title(current_page.data.title)
    %meta{name: 'description', content: 'Personal website of Stephen Caudill, software developer extraodinaire.'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
    %link{rel: 'alternate', type: 'application/rss+xml', title: 'RSS', href: 'http://feeds.feedburner.com/stephencaudill'}
    %link{rel: 'alternate', type: 'application/atom+xml', title: 'Atom 1.0', href: 'http://feeds.feedburner.com/stephencaudill'}
    %link{href: 'http://fonts.googleapis.com/css?family=Gentium+Book+Basic:400italic,700,400|Open+Sans:700', rel: 'stylesheet', type: 'text/css'}
    = stylesheet_link_tag "main"
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
