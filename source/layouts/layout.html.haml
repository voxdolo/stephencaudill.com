      ga('create', 'UA-62451721-1', 'auto');
      ga('send', 'pageview');

  %body{class: page_classes}
    %header.main-header
      %div.wrap
        %h1.logo
          %a{href: "/"}
            %span.lambda
            Stephen Caudill

        %nav.main-nav
          %ul
            %li
              %a{href: "/blog"} Blog
            %li
              %a{href: "mailto:hello@stephencaudill.com"} Email

    = yield

%section{class: page_classes.include?('blog') ? 'communication-gray' : 'communication'}
  %div.wrap
    %aside.content-aside
      %h2 Communication

    %section.email
      %h3 Email
      %a{href: "mailto:hello@stephencaudill.com"}hello@stephencaudill.com

    %section.elsewhere
      %h3 Elsewhere
      %ul
        %li
          %a{href: "https://www.github.com/voxdolo"}Github
        %li
          %a{href: "https://www.linkedin.com/in/stephen-caudill"}Linkedin
        %li
